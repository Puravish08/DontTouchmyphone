<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DontTouchMyPhone" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.DontTouchMyPhone" parent="Base.Theme.DontTouchMyPhone" />



    <style name="BackIconStyle">
        <item name="android:padding">@dimen/_6sdp</item>
        <item name="android:layout_width">@dimen/_30sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
    </style>

    <style name="ScreenTitleStyle">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/header_text_main</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="fontFamily">@font/inter_semi_bold</item>
    </style>

    <style name="ExtraLargeTextWithSecondaryTextColorStyle" parent="@style/LargeTextWithPrimaryTextColorStyle">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>
    <style name="LargeTextWithPrimaryTextColorStyle">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="MediumTextStyle">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/body_text_main</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>



    <style name="MainScreenHeaderStyle">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/header_text_main</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="fontFamily">@font/inter_semi_bold</item>
    </style>



    <style name="MainScreenBodyStyle">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="maxLines">2</item>
    </style>




    <style name="CustomCardViewStyleAtMain">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/_85sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:layout_marginBottom">@dimen/_8sdp</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="cardCornerRadius">@dimen/_6sdp</item>
        <item name="cardElevation">@dimen/_7sdp</item>
    </style>

    <style name="NormalTextStyle">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/body_text_main</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="CustomCardViewStyleAtHome">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/_58sdp</item>
        <item name="android:layout_marginTop">@dimen/_6sdp</item>
        <item name="android:layout_marginBottom">@dimen/_6sdp</item>
        <item name="android:layout_marginStart">@dimen/_14sdp</item>
        <item name="android:layout_marginEnd">@dimen/_14sdp</item>
        <item name="cardCornerRadius">@dimen/_6sdp</item>
        <item name="cardElevation">@dimen/_2sdp</item>
    </style>


    <style name="myProgressBarStyle">
        <item name="android:maxWidth">76.0dip</item>
        <item name="android:maxHeight">76.0dip</item>
        <item name="android:minWidth">76.0dip</item>
        <item name="android:minHeight">76.0dip</item>
    </style>


    <style name="ia_tv_app_info_btn_style">
        <item name="android:textAppearance">@style/ia_video_overlay_text_view</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_text_overlay</item>
        <item name="android:padding">@dimen/_2ssp</item>
        <item name="android:layout_width">@dimen/_92sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ia_video_overlay_text_view">
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:textColor">@color/ia_video_overlay_text</item>
        <item name="android:shadowColor">@color/ia_video_overlay_text_shadow</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">0.5</item>
    </style>

    <style name="ia_identifier_overlay_style">
        <item name="android:padding">@dimen/_2sdp</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">@dimen/_6sdp</item>
        <item name="android:layout_marginBottom">@dimen/_6sdp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>


    <style name="ia_expand_collapse_button_style" parent="@style/ia_top_right_overlay">
        <item name="android:background">@drawable/ia_round_overlay_bg</item>
        <item name="android:padding">@dimen/_3sdp</item>
        <item name="android:layout_width">@dimen/_26sdp</item>
        <item name="android:layout_height">@dimen/_26sdp</item>
        <item name="android:src">@drawable/ia_sel_expand_collapse</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="ia_top_right_overlay">
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:layout_marginRight">@dimen/_8sdp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>



    <style name="ia_video_progressbar_style_new" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:background">@drawable/circular_progress_background</item>
        <item name="android:layout_width">46.0dip</item>
        <item name="android:layout_height">46.0dip</item>
        <item name="android:progressDrawable">@drawable/circular_progress</item>
    </style>





    <style name="ia_play_button_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">@dimen/_58sdp</item>
        <item name="android:layout_height">@dimen/_58sdp</item>
        <item name="android:src">@drawable/ia_play</item>
    </style>




    <style name="Theme.StopRingTone" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:statusBarColor">@color/blue</item>
        <item name="colorOnPrimary">@color/blue</item>
        <item name="colorOnSecondary">@color/blue</item>
        <item name="colorPrimary">@color/screen_bg_color</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorSecondary">@color/screen_bg_color</item>
        <item name="colorSecondaryVariant">@color/blue</item>
    </style>



    <style name="ia_mute_button_style" parent="@style/ia_top_left_overlay">
        <item name="android:background">@drawable/ia_round_overlay_bg</item>
        <item name="android:padding">@dimen/_3sdp</item>
        <item name="android:layout_width">@dimen/_26sdp</item>
        <item name="android:layout_height">@dimen/_26sdp</item>
        <item name="android:src">@drawable/ia_sel_mute</item>
        <item name="android:scaleType">fitCenter</item>
    </style>



    <style name="ia_top_left_overlay">
        <item name="android:layout_marginLeft">@dimen/_8sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>




    <style name="ia_tv_remaining_time_style" parent="@style/ia_bottom_left_overlay">
        <item name="android:textAppearance">@style/ia_video_overlay_text_view</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_circle_overlay</item>
        <item name="android:layout_width">@dimen/_26sdp</item>
        <item name="android:layout_height">@dimen/_26sdp</item>
        <item name="android:maxLines">1</item>
    </style>



    <style name="ia_bottom_left_overlay">
        <item name="android:layout_marginLeft">@dimen/_8sdp</item>
        <item name="android:layout_marginBottom">@dimen/_8sdp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>


    <style name="ia_tv_call_to_action_style" parent="@style/ia_bottom_right_overlay">
        <item name="android:textAppearance">@style/ia_video_overlay_text_view</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_text_overlay</item>
        <item name="android:padding">@dimen/_2sdp</item>
        <item name="android:layout_width">@dimen/_92sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ia_tv_skip_style" parent="@style/ia_top_right_overlay">
        <item name="android:textAppearance">@style/ia_video_overlay_text_view</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_text_overlay</item>
        <item name="android:padding">@dimen/_2sdp</item>
        <item name="android:layout_width">@dimen/_92sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
    </style>



    <style name="ia_video_progressbar_style" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/_2sdp</item>
        <item name="android:progressDrawable">@drawable/ia_progress_bar_drawable</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>






    <style name="ia_bottom_right_overlay">
        <item name="android:layout_marginRight">@dimen/_8sdp</item>
        <item name="android:layout_marginBottom">@dimen/_8sdp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>


    <style name="Theme_Dialog_90" parent="@style/Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">90.0%</item>
        <item name="android:windowMinWidthMinor">90.0%</item>
    </style>



    <style name="UploadDialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>



</resources>